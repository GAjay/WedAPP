<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_spalsh</item>
    </style>

    <style name="pin_edittext_style">
        <item name="android:layout_width">35dp</item>
        <item name="android:height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:minEms">1</item>
        <item name="android:inputType">number</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:textColorSecondaryInverse">@color/colorAccent</item>
        <item name="android:textColorPrimaryInverse">@color/colorAccent</item>
        <item name="android:editTextColor">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

</resources>
